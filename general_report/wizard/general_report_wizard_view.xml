<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="tms_wizard_report_general" model="ir.ui.view">
            <field name="name">Report General Report</field>
            <field name="model">report.general.report</field>
            <field name="arch" type="xml">
                <form string="General Report">
                    <group col="4">
                        <group col="2" colspan="2">
                            <field name="month"/>
                            <field name="mode_type"/>
                        </group>
                        <group col="2" colspan="2">
                            <field name="year"/>
                            <field name="vehicle_id" widget='many2many_tags'/>
                        </group>
                    </group>
                    <footer>
                        <button name="create_report" class="oe_highlight" string="Confirm" type="object"/>
                        <button special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_report_general_travel" model="ir.actions.act_window">
            <field name="name">Gerenal Report</field>
            <field name="res_model">report.general.report</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="tms_wizard_report_general"/>
            <field name="target">new</field>
        </record>
        <menuitem action="action_report_general_travel" id="report_general_travel" parent="tms.menu_tms_reports"/>
    </data>
</odoo>

