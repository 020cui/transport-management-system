                            ### TREE ###
    <record model="ir.ui.view" id="tms_analisys_03_tree">
            <field eval="1" name="priority"/>
            <field name="name">tms.analisys.03.tree</field>
            <field name="model">tms.analisys.03</field>
            <field name="arch" type="xml">
                <tree string="TMS Analisys 03 orders">

			<field name="id" invisible="1" />

			<field name="order_id"/>

			<field name="activity_id" invisible="1" />
			<field name="activity_name"/>

			<field name="product_id"  />

			<field name="order_name" invisible="1" />
			<field name="product_name"  invisible="1" />

			<field name="price"/>
			<field name="quantity"/>
			<field name="total_price"/>


			<field name="unit_id" />
			<field name="driver_id" invisible="1"/>

		</tree>
	    </field>
    </record>

