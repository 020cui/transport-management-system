<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_txt_expense" model="ir.ui.view">
            <field name="name">Create Txt</field>
            <field name="model">tms.txt.wizard</field>
            <field name="arch" type="xml">
                <form string="Create Txt Expenses">
                    <separator colspan="4" string="Create TXT from selected Expenses?"/>
                    <footer>
                        <button class="oe_highlight" name="generate_file" string="Generate File" type="object"/>
                        <button class="oe_link" special="cancel" string="Cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window id="action_view_txt_expense" key2="client_action_multi" name="Create Txt Expense" res_model="tms.txt.wizard" src_model="tms.expense" target="new" view_mode="form"/>
        <act_window id="action_view_txt_waybill" key2="client_action_multi" name="Create Txt Waybill" res_model="tms.txt.wizard" src_model="tms.waybill" target="new" view_mode="form"/>
    </data>
</odoo>