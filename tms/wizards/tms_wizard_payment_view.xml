<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="tms_view_wizard_payment" model="ir.ui.view">
            <field name="name">Make Payment</field>
            <field name="model">tms.wizard.payment</field>
            <field name="arch" type="xml">
                <form string="Make Payment">
                    <group>
                        <field name="journal_id"/>
                        <field name="amount_total"/>
                    </group>
                    <footer>
                        <button name="make_payment" class="oe_highlight" string="Confirm" type="object"/>
                        <button special="cancel" string="Cancel"/></footer>
                </form>
            </field>
        </record>
        <act_window 
            id="action_view_wizard_payment" 
            key2="client_action_multi" 
            name="Make Payment." 
            res_model="tms.wizard.payment" 
            src_model="tms.advance" 
            target="new" 
            view_mode="form"/>
    </data>
</odoo>
