<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <!-- 
##############################
TMS.UNIT.CATEGORY 
##############################
-->
<!-- SEARCH View for tms.unit.category (Types, Brands, Models, Motor Type for Transportation Units) --> 
    <record model="ir.ui.view" id="view_tms_unit_category_search">
        <field name="name">tms.unit.category.search</field>
        <field name="model">tms.unit.category</field>
        <field name="arch" type="xml">
            <search string="Unit Master Data">
                <filter string="View"        icon="terp-accessories-archiver" domain="[('type','=','view')]"/>
                <filter string="Unit Type"   icon="terp-accessories-archiver" domain="[('type','=','unit_type')]"/>
                <filter string="Motor Brand" icon="terp-accessories-archiver" domain="[('type','=','brand')]"/>
                <filter string="Motor Model" icon="terp-accessories-archiver" domain="[('type','=','motor')]"/>
                <filter string="Extra Data"  icon="terp-accessories-archiver" domain="[('type','=','extra_data')]"/>
                <filter string="Expiry"      icon="terp-accessories-archiver" domain="[('type','=','expiry')]"/>
                <filter string="Unit Status" icon="terp-accessories-archiver" domain="[('type','=','unit_status')]"/>
                <filter string="Active Cause" icon="terp-accessories-archiver" domain="[('type','=','active_cause')]"/>
                <filter string="Red Tape"    icon="terp-accessories-archiver" domain="[('type','=','red_tape')]"/>
                <group  expand='0' string='Group by...'> 
                    <filter string="Category"  icon="terp-accessories-archiver" domain="[]" context="{'group_by' : 'type'}"/>
                </group>
            </search>
        </field>
    </record>

<!-- TREE View for tms.unit.category (Types, Brands, Models, Motor Type for Transportation Units) --> 
    <record model="ir.ui.view" id="view_tms_unit_category_tree">
        <field name="name">tms.unit.category.tree</field>
        <field name="model">tms.unit.category</field>
        <field name="arch" type="xml">
            <tree string="Unit Master Data" colors="green:type in ('unit_type');blue:type in ('brand');black:type in ('model');red:type in ('extra_data');">
                <field name="company_id" />
                <field name="name" />
                <field name="complete_name" />
                <field name="type"/>
                <field name="notes"/>
            </tree>
        </field>
    </record>

<!-- FORM View for tms.unit.category (Types, Brands, Models, Motor Type for Transportation Units) -->
    
        <record id="view_tms_unit_category_form" model="ir.ui.view">
            <field name="name">tms.unit.category.form</field>
            <field name="model">tms.unit.category</field>
            <field name="arch" type="xml">
                <form string="Unit Categories" version="7.0">
                    <sheet>
                        <h1>
                            <!--<label string="Name" /> -->
                            <field name="name" class="oe_inline"/>
                        </h1>
            <group col="4" colspan="4">
                            <field name="type" select="1"/>
                <field name="parent_id" />
                            <field name="active" select="1"/>
                            <field name="sequence" />
                            <field name="mandatory" attrs="{'invisible':[('type','!=','expiry')]}"/>
                            <newline/>
                            <group attrs="{'invisible':[('type','!=','motor')]}" colspan="2">
                                <field name="fuel_efficiency_drive_unit"/>
                                <newline/>
                                <field name="fuel_efficiency_1trailer"/>
                                <newline/>
                                <field name="fuel_efficiency_2trailer"/>
                            </group>
                            <newline/>
                            <field name="notes" colspan="4"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

<!-- Action for tms.unit.category (Types, Brands, Models, Motor Type for Transportation Units) -->
    <record model="ir.actions.act_window" id="open_view_tms_unit_category_form">
        <field name="name">TMS Unit Categories</field>
        <field name="res_model">tms.unit.category</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

<!-- Menu for tms.unit.category (Types, Brands, Models, Motor Type for Transportation Units) -->
    <menuitem name="Vehicles Related Catalogs" 
              parent="menu_tms_settings_unit" 
              id="menu_tms_settings_unit_category_form" 
              action="open_view_tms_unit_category_form"
          sequence="20"/>

    </data>
</openerp>