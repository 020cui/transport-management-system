<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_tms_factor_special_search" model="ir.ui.view">
            <field name="name">tms.factor.special.search</field>
            <field name="model">tms.factor.special</field>
            <field name="arch" type="xml">
                <search string="Special Factors">
                    <field name="name"/>
                </search>
            </field>
        </record>
        <record id="view_tms_factor_special_tree" model="ir.ui.view">
            <field name="name">tms.factor.special.tree</field>
            <field name="model">tms.factor.special</field>
            <field name="arch" type="xml">
                <tree string="Special Factors">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="type"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="view_tms_factor_special_form" model="ir.ui.view">
            <field name="name">tms.factor.special.form</field>
            <field name="model">tms.factor.special</field>
            <field name="arch" type="xml">
                <form string="Unit Categories" version="7.0">
                    <sheet>
                        <group col="4" colspan="4">
                            <h1>
                                <field colspan="4" name="name"/>
                            </h1>
                        </group>
                        <group col="4" colspan="4">
                            <field name="date"/>
                            <field name="active"/>
                            <field name="type"/>
                            <newline/>
                            <notebook col="4" colspan="4">
                                <page string="Description">
                                    <field colspan="4" name="description" nolabel="1"/>
                                </page>
                                <page string="Python Code">
                                    <field colspan="4" name="python_code" nolabel="1"/>
                                </page>
                                <page string="Associated Factors">
                                    <field colspan="4" name="factor_ids" nolabel="1" readonly="1" widget="one2many_tags"/>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="open_view_tms_factor_special_form" model="ir.actions.act_window">
            <field name="name">TMS Special Factors</field>
            <field name="res_model">tms.factor.special</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
        <menuitem action="open_view_tms_factor_special_form" id="menu_tms_factor_special_form" name="Special Factors" parent="menu_tms_settings" sequence="99" groups="tms.group_traffic"/>
    </data>
</odoo>
