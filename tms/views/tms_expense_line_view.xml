<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_tms_expense_line_tree" model="ir.ui.view">
            <field name="name">tms.expense.line.tree</field>
            <field name="model">tms.expense.line</field>
            <field name="priority">2</field>
            <field name="arch" type="xml">
                <tree colors="blue:line_type=='salary';green:line_type=='fuel';gray:line_type=='madeup_expense';red:price_total&lt;0;" string="Expense Lines">
                    <field name='travel_id' readonly='1'/>
                        <field name='line_type'/>
                        <field name='product_id'/>
                        <field name='name'/>
                        <field name='product_uom_id'/>
                        <field name='product_qty'/>
                        <field name='unit_price'/>
                        <field name='tax_ids' widget='many2many_tags'/>
                        <field name='price_subtotal'/>
                        <field name='tax_amount'/>
                        <field name='price_total'/>
                        <field name='is_invoice'/>
                        <field name='invoice_id'/>
                </tree>
            </field>
        </record>
        <record id="view_tms_expense_line_form" model="ir.ui.view">
            <field name="name">tms.expense.line.form</field>
            <field name="model">tms.expense.line</field>
            <field name="arch" type="xml">
                <form string="Expense Lines">
                    <sheet>
                        <h2>Travel Expenses Line </h2>
                        <group>
                            <field domain="[('expense_id', '=', expense_id)]" name="travel_id"/>
                            <field name="line_type" required='1'/>
                            <field name="product_id" required='1' domain="[('tms_product_category', '=', line_type)]"/>
                            <field name="name"/>
                            <field name="product_uom_id" required='1'/>
                            <field name="product_qty" required='1'/>
                            <field invisible="1" name="expense_id"/>
                            <field name='unit_price' required='1'/>
                            <field name='tax_ids' widget='many2many_tags' attrs="{'invisible':[('line_type','in', ['salary_discount', 'salary', 'salary_retention'])]}"/>
                            <field name="price_subtotal" required="1"/>
                            <field name="tax_amount" attrs="{'invisible':[('line_type','in', ['salary_discount', 'salary', 'salary_retention'])]}"/>
                            <field name="price_total" required='1'/>
                        </group>
                        <group string="Supplier Details">
                            <field attrs="{'invisible':[('line_type','!=','real_expense')]}" name="is_invoice"/>
                            <field attrs="{'invisible':[('is_invoice', '=', False)],'required':[('is_invoice', '=', True)]}" name="partner_id"/>
                            <field attrs="{'invisible':['|', ('is_invoice', '=', False), ('invoice_id', '=', False)]}" domain="[('partner_id', '=', partner_id),('state', 'not in', ['paid'])]" name="invoice_id" readonly="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="view_tms_expense_line_filter" model="ir.ui.view">
            <field name="name">tms.expense.line.list.select</field>
            <field name="model">tms.expense.line</field>
            <field name="arch" type="xml">
                <search string="Expense Lines">
                    <filter context="{'group_by':'line_type'}" domain="[]" icon="terp-check" string="Line Type"/>
                </search>
            </field>
        </record>
        <record id="action_tms_expense_line_form" model="ir.actions.act_window">
            <field name="name">Travel Expenses Line</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tms.expense.line</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_tms_expense_line_filter"/>
            <field name="help">TMS Travel Expenses Line</field>
        </record>
    </data>
</odoo>