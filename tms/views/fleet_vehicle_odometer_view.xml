<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="fleet_vehicle_odometer_inherit_tms" model="ir.ui.view">
            <field name="name">fleet.vehicle.odometer.tree.tms</field>
            <field name="model">fleet.vehicle.odometer</field>
            <field name="inherit_id" ref="fleet.fleet_vehicle_odometer_tree"/>
            <field name="arch" type="xml">
                <field name="vehicle_id" position="after">
                    <!-- <field name="odometer_id" />-->
                    <field invisible="1" name="last_odometer"/>
                    <field name="current_odometer" on_change="on_change_current_odometer(vehicle_id,last_odometer, current_odometer)"/>
                    <field name="distance" on_change="on_change_distance(vehicle_id, last_odometer, distance)"/>
                </field>
                <field name="unit" position="after">
                    <field name="tms_expense_id" readonly="1"/>
                    <field name="tms_travel_id" readonly="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>