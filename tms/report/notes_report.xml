<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="header_super_notes">
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel">
                    <t t-as="doc" t-foreach="docs">
                        <div class="panel-heading" t-att-style="Panel_Header">
                            <p style="margin-top: 4%; text-align:center; font-size:30px; font-family: monospace; font-weight:bold; color:#333 !important; ">LETTER OF INSTRUCTIONS: <span t-field="doc.route_id.note_ids.partner_id"/> </p>
                        </div>
                        <table class="table table-condensed">
                            <thead>
                                <tr>
                                    <th><label>Departure Date:</label></th>
                                    <th> <span t-field="doc.date_start"/></th>
                                </tr>
                                <tr>
                                    <th><label>Deliver Date:</label></th>
                                    <th><span t-field="doc.travel_duration"/> Hrs</th>
                                </tr>
                                <tr>
                                    <th><label>Waybill:</label></th>
                                    <th><span t-field="doc.waybill_ids.name"/></th>
                                </tr>
                                <tr>
                                    <th><label>Unit:</label></th>
                                    <th><span t-field="doc.unit_id"/></th>
                                </tr>
                                <tr>
                                    <th><label>Trailer:</label></th>
                                    <th><span t-field="doc.trailer1_id"/></th>
                                </tr>
                                <tr>
                                    <th><label>Driver:</label></th>
                                    <th><span t-field="doc.employee_id"/></th>
                                </tr>
                            </thead>
                        </table>
                    </t>
                    </div>
                </div>
            </div>
        </template>
        <template id="notes_report">
            <t t-as="doc" t-foreach="docs">
                <div class="page">
                    <t t-call="tms.header_super_notes"/>
                    <t t-set="waybills" t-value="doc.waybill_ids"/>
                    <t t-set="notes" t-value="doc.route_id.note_ids"/>
                    <t t-as="partner_waybill" t-foreach="waybills">
                        <t t-as="partner_note" t-foreach="notes">
                        <t t-set="partner_way" t-value="partner_waybill.partner_id"/>
                        <t t-set="partner_not" t-value="partner_note.partner_id"/>
                        <t t-if="partner_not == partner_way">
                            <table class="table-condensed">
                                <tr>
                                        <td>
                                            <label>Notes:</label>
                                        </td>
                                        <td>
                                            <span t-field="partner_note.notes"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <label>Rules:</label>
                                        </td>
                                        <td>
                                            <span t-field="partner_note.rules"/>
                                        </td>
                                    </tr>
                            </table>
                        </t>
                    </t>
                    </t>
                </div>
            </t>
        </template>
        <template id="notes_report_translate">
            <t t-call="report.html_container">
                <t t-as="doc_id" t-foreach="doc_ids">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'tms.notes_report')"/>
                </t>
            </t>
        </template>
        <report file="tms.notes_report" id="print_notes_report" model="tms.travel" name="tms.notes_report" report_type="qweb-pdf" string="Letter of Instructions"/>
        <record id="print_notes_report" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="tms.paperformat_94_151_tms"/>
        </record>
    </data>
</odoo>