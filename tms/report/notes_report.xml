<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="header_super_notes">
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel">
                    <t t-as="doc" t-foreach="docs">
                        <div class="panel-heading" t-att-style="Panel_Header">
                            <p style="margin-top: 4%; color:#E0FFFF !important; text-align:center; font-size:38px; font-family: monospace; font-weight:bold; color:#333 !important; ">LETTER OF INSTRUCTIONS: <span t-field="doc.route_id.note_ids.partner_id"/> </p>
                        </div>
                        <style>
                            .sangria{
                             margin-left: 65px;
                            }
                        </style>
                        <div class="panel-body" t-att-style="Panel">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Departure Date:</th>
                                        <th><span t-field="doc.date_start"/></th>
                                    </tr>
                                    <tr>
                                        <th><label style="margin-left:25px;">Deliver Date:</label></th>
                                        <th><span t-field="doc.travel_duration"/> Hrs</th>
                                    </tr>
                                    <tr>
                                        <th><label class="sangria">Waybill:</label></th>
                                        <th> <span t-field="doc.waybill_ids.name"/></th>
                                    </tr>
                                    <tr>
                                        <th><label style="margin-left: 85px">Unit:</label></th>
                                        <th><span t-field="doc.unit_id"/></th>
                                    </tr>
                                    <tr>
                                        <th><label class="sangria">Trailer:</label></th>
                                        <th><span t-field="doc.trailer1_id"/></th>
                                    </tr>
                                    <tr>
                                        <th><label class="sangria">Driver:</label></th>
                                        <th><span t-field="doc.employee_id"/></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </t>
                    </div>
                </div>
            </div>
        </template>
        <template id="notes_report">
        </template>
        <template id="notes_report_translate">
            <t t-call="report.html_container">
                <t t-as="doc_id" t-foreach="doc_ids">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'tms.notes_report')"/>
                </t>
            </t>
        </template>
        <report file="tms.notes_report" id="print_notes_report" model="tms.travel" name="tms.notes_report" report_type="qweb-pdf" string="Letter of Instructions"/>
        <record id="print_notes_report" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="tms.paperformat_94_151"/>
        </record>
    </data>
</odoo>
