<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="header_super">
            <div class="row">
                <div class="col-xs-12">
                    <div class="panel" style="border-color: #333 !important;">
                    <t t-as="doc" t-foreach="docs">
                        <div class="panel-heading" t-att-style="Panel_Header">
                            <p style="color:#E0FFFF !important; text-align:center; font-size:38px; font-family: sans-serif; font-weight:bold; color:#333 !important; ">LETTER OF INSTRUCTIONS: <span t-field="doc.route_id.note_ids.partner_id"/> </p>
                        </div>
                        <div class="panel-body" t-att-style="Panel">
                            <p style="font-size:14px; font-family: sans-serif;">
                                <strong> Departure Date: <span t-field="doc.date_start"/></strong>
                            </p>
                             <p style="font-size:14px; font-family: sans-serif; ">
                                <strong> Deliver Date: <span t-field="doc.travel_duration"/> Hrs</strong>
                            </p><br/>
                            <p style="font-size:14px; font-family: sans-serif; ">
                                <strong> Waybill: <span t-field="doc.waybill_ids.name"/></strong>
                            </p>
                            <p style="font-size:14px; font-family: sans-serif; ">
                                <strong> Unit: <span t-field="doc.unit_id"/></strong>
                            </p>
                            <p style="font-size:14px; font-family: sans-serif; ">
                                <strong> Trailer: <span t-field="doc.trailer1_id"/></strong>
                            </p>
                            <p style="font-size:14px; font-family: sans-serif; ">
                                <strong> Driver: <span t-field="doc.employee_id"/></strong>
                            </p>
                        </div>
                    </t>
                    </div>
                </div>
            </div>
        </template>
        <template id="notes_report">
            <t t-as="doc" t-foreach="docs">
                <div class="page">
                    <t t-call="tms.header_super"/>
                    <br/>
                    <div class="row">
                        <div class="col-xs-3">
                            <p style="font-size:12px; font-family: sans-serif; ">
                              <t-row>
                                  <span t-field="doc.route_id.note_ids.notes"/>
                              </t-row>
                            </p>
                            <p style="font-size:18px; font-family: sans-serif; ">
                                <strong>Transito: <span t-field="doc.route_id.name"/></strong>
                            </p>
                            <p style="font-size:12px; font-family: sans-serif; ">
                              <t-row>
                                  <span t-field="doc.route_id.note_ids.rules"/>
                              </t-row>
                            </p>
                        </div>
                    </div>
                    <br/>
                </div>
            </t>
        </template>
        <record id="paperformat_94_150" model="report.paperformat">
            <field name="name">US Letter</field>
            <field eval="True" name="default"/>
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field eval="False" name="header_line"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
        <template id="notes_report_translate">
            <t t-call="report.html_container">
                <t t-as="doc_id" t-foreach="doc_ids">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'tms.notes_report')"/>
                </t>
            </t>
        </template>
        <report file="tms.notes_report" id="print_notes_report" model="tms.travel" name="tms.notes_report" report_type="qweb-pdf" string="Letter of Instructions"/>
        <record id="print_notes_report" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_94_150"/>
        </record>
    </data>
</odoo>