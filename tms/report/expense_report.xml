<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="expense_report">
            <t t-as="doc" t-foreach="docs">
                <div class="page">
                    <div class="row text-center" t-att-style="Panel_Header">
                        <strong>Liquidation</strong>
                        <span t-field="doc.name"/>
                    </div>
                    <div class="border_div">
                        <div class="row">
                            <div class="col-xs-6">
                                <strong>Operator: </strong>
                                <span t-field="doc.employee_id"/>
                            </div>
                            <div class="col-xs-3">
                                <strong>Vat: </strong>
                            </div>
                            <div class="col-xs-3">
                                <strong>NSS</strong>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <strong>Date: </strong>
                                <span t-field="doc.date"/>
                            </div>
                            <div class="col-xs-3">
                                <strong>Departure: </strong>
                            </div>
                            <div class="col-xs-3">
                                <strong>Arrival: </strong>
                            </div>
                            <div class="col-xs-3">
                                <strong>Days</strong>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-3">
                                <strong>Unit: </strong>
                                <span t-field="doc.unit_id"/>
                            </div>
                            <div class="col-xs-6"/>
                            <div class="col-xs-3">
                                <strong>Loaded Kms: </strong>
                                <span t-esc="sum(x.distance_route for x in doc.travel_ids)"/>
                                <br/>
                                <strong>Empty Kms: </strong>
                                <span t-esc="sum(x.distance_empty for x in doc.travel_ids)"/>
                                <br/>
                                <strong>Traveled Kms: </strong>
                                <span t-esc="sum(x.distance_driver for x in doc.travel_ids)"/>
                                <br/>
                            </div>
                        </div>
                    </div>
                    <br/>
                    <div class="row">
                        <div class="col-xs-3">
                            <strong>ITINERARY</strong>
                        </div>
                        <div class="col-xs-9">
                            <strong>TRAVEL EXPENSES</strong>
                        </div>
                    </div>
                    <hr/>
                    <div class="row">
                        <div class="col-xs-4">
                            <t t-set="count" t-value="0"/>
                            <t t-as="travel" t-foreach="doc.travel_ids">
                                <span t-esc="count + 1"/>
                                <span>.-</span>
                                <span t-field="travel.route_id"/>
                                <br/>
                            </t>
                        </div>
                        <div class="col-xs-4">
                            <strong>Diesel: </strong>
                            <span t-esc="sum(x.product_qty for x in doc.fuel_log_ids)"/>
                        </div>
                        <div class="col-xs-4 text-right">
                            <span t-esc="sum(x.price_total for x in doc.fuel_log_ids)"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4"/>
                        <span class="col-xs-8">ADVANCE</span>
                    </div>
                    <div class="row">
                        <div class="col-xs-4"/>
                        <div class="col-xs-4">
                            <strong>Operator salary: </strong>
                            <br/>
                            <strong>Other income: </strong>
                            <br/>
                            <strong>Total expenses: </strong>
                            <br/>
                            <strong>Expense account: </strong>
                            <br/>
                            <strong>Total Expenses/Taxes: </strong>
                        </div>
                        <div class="col-xs-4 text-right">
                            <span t-field="doc.amount_salary"/>
                            <br/>
                            <span t-field="doc.amount_advance"/>
                            <br/>
                            <span t-esc="sum(x.price_subtotal for x in doc.expense_line_ids)"/>
                            <br/>
                            <span>taxes</span>
                            <br/>
                            <span t-esc="sum(x.price_total for x in doc.expense_line_ids)"/>
                            <br/>
                        </div>
                    </div>
                    <br/>
                    <table class="table">
                        <tr>
                            <th>No.</th>
                            <th>Name</th>
                            <th>No. Guide</th>
                            <th>Trailer</th>
                            <th>Weight</th>
                            <th>Price</th>
                            <th>I.V.A.</th>
                            <th>Retention</th>
                            <th>Total</th>
                            <th>Base</th>
                        </tr>
                    </table>
                    <div class="row">
                        <div class="col-xs-6 text-center">
                            <h5>Expense Summary</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3">
                            <strong>Salary</strong>
                            <br/>
                            <strong>Salary Discounts</strong>
                            <br/>
                            <strong>Salary Retentions</strong>
                            <br/>
                            <strong>Expenses</strong>
                            <br/>
                        </div>
                        <div class="col-xs-3">
                            <span t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;res_company.currency_id&quot;}" t-field="doc.amount_salary"/>
                            <br/>
                            <span t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;res_company.currency_id&quot;}" t-field="doc.amount_salary_discount"/>
                            <br/>
                            <span t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;res_company.currency_id&quot;}" t-field="doc.amount_salary_retention"/>
                            <br/>
                            <span t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;res_company.currency_id&quot;}" t-field="doc.amount_real_expense"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6"/>
                        <div class="col-xs-6 text-center">
                            <h5>Notes</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6"/>
                        <div class="col-xs-6">
                            <span t-field="doc.notes"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-center">
                            <h5>Advance</h5>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-3">
                            <t t-as="retention" t-foreach="doc.expense_line_ids">
                                <t t-set="type" t-value="retention.line_type"/>
                                <t t-if="type == 'fuel'">
                                    <strong>
                                        <span t-field="retention.name"/>
                                        <br/>
                                    </strong>
                                </t>
                            </t>
                            <t t-as="advance" t-foreach="doc.advance_ids">
                                <strong>
                                    <span t-field="advance.name"/>
                                    <br/>
                                </strong>
                            </t>
                        </div>
                        <div class="col-xs-3">
                            <t t-as="retention" t-foreach="doc.expense_line_ids">
                                <t t-set="type" t-value="retention.line_type"/>
                                <t t-if="type == 'fuel'">
                                    <span t-field="retention.price_total"/>
                                    <br/>
                                </t>
                            </t>
                            <t t-as="advance" t-foreach="doc.advance_ids">
                                <span t-field="advance.amount"/>
                                <br/>
                            </t>
                        </div>
                        <div class="col-xs-3 text-center">
                            <hr/>
                            <br/>
                            <span>Driver</span>
                        </div>
                        <div class="col-xs-3 text-center">
                            <hr/>
                            <br/>
                            <span>Reviewed by</span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-6 text-center">
                            <h4>
                                <span>SALARY</span>
                                <span t-field="doc.amount_balance"/>
                            </h4>
                        </div>
                    </div>
                </div>
            </t>
            <t t-set="Panel_Header" t-value="'color:#000000; text-align:left;font-size:10px;background-color:#f0f0f0;border-color: #333; padding-left:5; padding-right:0; padding-top:5; padding-bottom:0;'"/>
        </template>
        <record id="paperformat_94_151" model="report.paperformat">
            <field name="name">US Letter</field>
            <field eval="True" name="default"/>
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field eval="False" name="header_line"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>
        <template id="expense_report_translate">
            <t t-call="report.html_container">
                <t t-as="doc_id" t-foreach="doc_ids">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'tms.expense_report')"/>
                </t>
            </t>
        </template>
        <report file="tms.expense_report" id="print_expense_report" model="tms.expense" name="tms.expense_report" report_type="qweb-pdf" string="Expense Report"/>
        <record id="print_expense_report" model="ir.actions.report.xml">
            <field name="paperformat_id" ref="paperformat_94_151"/>
        </record>
    </data>
</odoo>