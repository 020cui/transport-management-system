############################################################################################################################
                            ### TREE ###
    <record model="ir.ui.view" id="tms_analisys_01_tree">
            <field eval="1" name="priority"/>
            <field name="name">tms.analisys.01.tree</field>
            <field name="model">tms.analisys.01</field>
            <field name="arch" type="xml">
                <tree string="TMS Analisys 01 orders">
			<field name="id" invisible="1" />
			<field name="name" />
			<field name="user_name" invisible="1" />
			<field name="unit_name" />
			<field name="driver_name" invisible="1" />

			<field name="manpower_cost" />
			<field name="material_cost" />
			<field name="date" />
            <field name="year" invisible="1" />
            <field name="month" invisible="1" />
            <field name="day" invisible="1" />

			<field name="date_start" />
			<field name="date_end" />
		</tree>
	    </field>
    </record>

